{
  "name": "vscode-global-markdown-styles",
  "version": "0.0.1",
  "description": "Apply global styles to Markdown preview in Visual Studio Code",
  "keywords": [
    "extension",
    "markdown",
    "preview",
    "styles",
    "visual-studio-code",
    "vscode",
    "vscode-extension"
  ],
  "homepage": "https://github.com/vanyauhalin/vscode-global-markdown-styles/",
  "bugs": {
    "url": "https://github.com/vanyauhalin/vscode-global-markdown-styles/issues/"
  },
  "repository": "github:vanyauhalin/vscode-global-markdown-styles",
  "license": {
    "type": "MIT",
    "url": "https://github.com/vanyauhalin/vscode-global-markdown-styles/blob/main/LICENSE/"
  },
  "author": {
    "name": "Ivan Uhalin",
    "email": "vanyauhalin@gmail.com",
    "url": "https://github.com/vanyauhalin/"
  },
  "main": "./dist/extension.js",
  "scripts": {
    "build": "tsx ./makefile.ts build",
    "compile": "tsc",
    "test": "tsx ./node_modules/uvu/bin.js"
  },
  "dependencies": {
    "lightningcss-wasm": "^1.24.1",
    "semver": "^7.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.4",
    "@types/semver": "^7.5.8",
    "@types/vscode": "^1.22.0",
    "esbuild": "^0.20.2",
    "sade": "^1.8.1",
    "tsx": "^4.7.2",
    "typescript": "^5.4.3",
    "uvu": "^0.5.6"
  },
  "packageManager": "pnpm@8.10.5",
  "engines": {
    "node": "21.7.2",
    "vscode": "^1.22.0"
  },

  "displayName": "Global Markdown Styles",
  "categories": [
    "Other",
    "Themes"
  ],
  "publisher": "vanyauhalin",
  "contributes": {
    "commands": [
      {
        "command": "vscode-global-markdown-styles.install",
        "title": "Install Styles",
        "category": "Global Markdown Styles"
      },
      {
        "command": "vscode-global-markdown-styles.uninstall",
        "title": "Uninstall Styles",
        "category": "Global Markdown Styles"
      },
      {
        "command": "vscode-global-markdown-styles.doctor",
        "title": "Diagnose Styles",
        "category": "Global Markdown Styles"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Global Markdown Styles",
      "properties": {
        "vscode-global-markdown-styles.http.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Allow loading styles using HTTP URLs."
        },
        "vscode-global-markdown-styles.imports": {
          "type": "array",
          "default": [],
          "description": "List of style URLs to import.",
          "items": {
            "type": "string"
          }
        },
        "vscode-global-markdown-styles.validation.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable validation of imported styles."
        }
      }
    }
  },
  "activationEvents": [
    "*"
  ],
  "icon": "docs/icon.png",
  "preview": true
}
